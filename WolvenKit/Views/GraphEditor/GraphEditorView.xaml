<UserControl
    x:Class="WolvenKit.Views.GraphEditor.GraphEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WolvenKit.Views.GraphEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nodes="clr-namespace:WolvenKit.App.ViewModels.GraphEditor;assembly=WolvenKit.App"
    xmlns:nodify="https://miroiu.github.io/nodify"
    xmlns:scene="clr-namespace:WolvenKit.App.ViewModels.GraphEditor.Nodes.Scene;assembly=WolvenKit.App"
    xmlns:sceneInternal="clr-namespace:WolvenKit.App.ViewModels.GraphEditor.Nodes.Scene.Internal;assembly=WolvenKit.App"
    xmlns:quest="clr-namespace:WolvenKit.App.ViewModels.GraphEditor.Nodes.Quest.Internal;assembly=WolvenKit.App"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:templates="clr-namespace:WolvenKit.Views.Templates"
    xmlns:converters="clr-namespace:WolvenKit.Converters"
    mc:Ignorable="d"
    d:DesignWidth="800"
    d:DesignHeight="450"
    x:Name="uc">
    <UserControl.Resources>
        <!-- Node icon converter -->
        <converters:NodeIconConverter x:Key="NodeIconConverter" />

        <!-- Style for help/info menu items -->
        <Style
            x:Key="HelpMenuItemStyle"
            TargetType="MenuItem">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Icon">
                <Setter.Value>
                    <iconPacks:PackIconMaterial
                        Kind="Information"
                        Width="12"
                        Height="12"
                        Margin="{DynamicResource WolvenKitMarginTiny}"
                        Foreground="{DynamicResource WolvenKitYellow}"
                        Opacity="0.7" />
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="0.7" />
            <Setter Property="Padding" Value="{DynamicResource WolvenKitMarginTiny}" />
        </Style>
        <!-- Tiled vector grid for the graph background -->
        <DrawingBrush
            x:Key="EditorGridBrush"
            TileMode="Tile"
            Viewport="0,0,20,20"
            ViewportUnits="Absolute"
            Stretch="None">
            <DrawingBrush.Transform>
                <ScaleTransform ScaleX="{DynamicResource WolvenKitGridScale}" ScaleY="{DynamicResource WolvenKitGridScale}" />
            </DrawingBrush.Transform>
            <DrawingBrush.Drawing>
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <!-- Thin subtle grid lines -->
                        <Pen
                            Brush="#FF1C1C1C"
                            Thickness="0.5" />
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <!-- Horizontal line -->
                            <LineGeometry
                                StartPoint="0,0"
                                EndPoint="20,0" />
                            <!-- Vertical line -->
                            <LineGeometry
                                StartPoint="0,0"
                                EndPoint="0,20" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
        <!-- Slightly thicker major lines every 5 tiles -->
        <DrawingBrush
            x:Key="EditorGridMajorBrush"
            TileMode="Tile"
            Viewport="0,0,160,160"
            ViewportUnits="Absolute"
            Stretch="None">
            <DrawingBrush.Transform>
                <ScaleTransform ScaleX="{DynamicResource WolvenKitGridScale}" ScaleY="{DynamicResource WolvenKitGridScale}" />
            </DrawingBrush.Transform>
            <DrawingBrush.Drawing>
                <GeometryDrawing Brush="Transparent">
                    <GeometryDrawing.Pen>
                        <Pen
                            Brush="#FF222222"
                            Thickness="1.0" />
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <LineGeometry
                                StartPoint="0,0"
                                EndPoint="160,0" />
                            <LineGeometry
                                StartPoint="0,0"
                                EndPoint="0,160" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>
    <Grid Background="{StaticResource ContentBackground}">
        <!-- Major grid layer -->
        <Border
            Background="{StaticResource EditorGridMajorBrush}"
            IsHitTestVisible="False" />

        <!-- Editor with minor grid background -->
        <nodify:NodifyEditor
            x:Name="Editor"
            Background="{StaticResource EditorGridBrush}"
            Connections="{Binding ElementName=uc,
                                  Path=Source.Connections}"
            ContextMenuOpening="Editor_OnContextMenuOpening"
            DisconnectConnectorCommand="{Binding ElementName=uc,
                                                 Path=Source.DisconnectCommand}"
            DisplayConnectionsOnTop="True"
            EnableRealtimeSelection="True"
            ItemsSource="{Binding ElementName=uc,
                                  Path=Source.Nodes}"
            PendingConnection="{Binding ElementName=uc,
                                        Path=Source.PendingConnection}"
            SelectedItem="{Binding ElementName=uc,
                                   Path=SelectedNode,
                                   Mode=TwoWay}"
            SelectedItems="{Binding ElementName=uc,
                                    Path=SelectedNodes,
                                    Mode=TwoWay}"
            ViewportLocation="{Binding ElementName=uc,
                                       Path=ViewportLocation,
                                       Mode=TwoWay}"
            ItemsDragCompletedCommand="{Binding ElementName=uc,
                                                Path=Source.ItemsDragCompletedCommand}">
            <nodify:NodifyEditor.Resources>


                <DataTemplate x:Key="HeaderTemplate">
                    <StackPanel>
                        <!-- Node ID and pills positioned above with negative margin -->
                        <StackPanel
                            Margin="-6,-42,0,-8"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="#888888"
                                FontSize="13"
                                FontFamily="Consolas"
                                Text="{Binding NodeIdText}"
                                Opacity="0.8" />

                            <!-- Notable Point pill indicator (takes priority) -->
                            <Border
                                Margin="6,0,0,0"
                                Padding="5,1,5,1"
                                VerticalAlignment="Center"
                                Background="#CCCC9900"
                                BorderBrush="#DDDD9933"
                                BorderThickness="1"
                                CornerRadius="8"
                                Visibility="{Binding HasNotablePoint,
                                                     Converter={StaticResource BooleanToVisibilityConverter},
                                                     FallbackValue=Collapsed}">
                                <StackPanel
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Text="⭐" />
                                    <TextBlock
                                        Margin="3,0,0,0"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="9"
                                        FontWeight="Bold"
                                        Text="{Binding NotablePointName,
                                                       FallbackValue='Notable Point'}" />
                                </StackPanel>
                            </Border>

                            <!-- Player pill indicator -->
                            <Border
                                Margin="6,0,0,0"
                                Padding="5,1,5,1"
                                VerticalAlignment="Center"
                                Background="#CC00AA55"
                                BorderBrush="#DD44CC77"
                                BorderThickness="1"
                                CornerRadius="8"
                                Visibility="{Binding IsPlayerNode,
                                                     Converter={StaticResource BooleanToVisibilityConverter},
                                                     FallbackValue=Collapsed}">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Text="👤 Player Involved" />
                            </Border>
                        </StackPanel>

                        <!-- Main node content -->
                        <StackPanel Orientation="Horizontal">
                            <!-- Scene node emoji icons for simple template -->
                            <TextBlock
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="{Binding Title,
                                               Converter={StaticResource NodeIconConverter}}" />
                            <TextBlock
                                Margin="0"
                                VerticalAlignment="Center"
                                Text="{Binding Title}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>

                <DataTemplate x:Key="DetailedHeaderTemplate">
                    <StackPanel>
                        <!-- Node ID and pills positioned above with negative margin -->
                        <StackPanel
                            Margin="-6,-42,0,-8"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="#888888"
                                FontSize="15"
                                FontFamily="Consolas"
                                Text="{Binding NodeIdText}"
                                Opacity="0.9" />

                            <!-- Notable Point pill indicator (takes priority) -->
                            <Border
                                Margin="6,0,0,0"
                                Padding="5,1,5,1"
                                VerticalAlignment="Center"
                                Background="#CCCC9900"
                                BorderBrush="#DDDD9933"
                                BorderThickness="1"
                                CornerRadius="8"
                                Visibility="{Binding HasNotablePoint,
                                                     Converter={StaticResource BooleanToVisibilityConverter},
                                                     FallbackValue=Collapsed}">
                                <StackPanel
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Text="⭐" />
                                    <TextBlock
                                        Margin="3,0,0,0"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        FontSize="9"
                                        FontWeight="Bold"
                                        Text="{Binding NotablePointName,
                                                       FallbackValue='Notable Point'}" />
                                </StackPanel>
                            </Border>

                            <!-- Player pill indicator -->
                            <Border
                                Margin="6,0,0,0"
                                Padding="4,1,4,1"
                                VerticalAlignment="Center"
                                Background="#CC00AA55"
                                BorderBrush="#DD44CC77"
                                BorderThickness="1"
                                CornerRadius="8"
                                Visibility="{Binding IsPlayerNode,
                                                     Converter={StaticResource BooleanToVisibilityConverter},
                                                     FallbackValue=Collapsed}">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    FontSize="9"
                                    FontWeight="Bold"
                                    Text="👤 Player Involved" />
                            </Border>
                        </StackPanel>

                        <!-- Main node content -->
                        <StackPanel
                            Margin="-6,-4,-6,-6"
                            Orientation="Vertical">
                            <!-- Header section with full background -->
                            <Border
                                Padding="10,6,10,6"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{Binding Background}">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Scene node emoji icons -->
                                    <TextBlock
                                        Margin="0,0,8,0"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        Text="{Binding Title,
                                                       Converter={StaticResource NodeIconConverter}}" />
                                    <TextBlock
                                        Margin="0"
                                        VerticalAlignment="Center"
                                        FontSize="21"
                                        FontWeight="Bold"
                                        Text="{Binding Title}" />

                                </StackPanel>
                            </Border>

                            <!-- Content section with subtle background -->
                            <Border
                                Padding="10,6,10,6"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{Binding ContentBackground}">
                                <ItemsControl ItemsSource="{Binding Details}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                MaxWidth="1000"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="{DynamicResource WolvenKitMarginTinyRight}"
                                                    Foreground="#999999"
                                                    Text="{Binding Key}"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTip="{Binding Key}" />

                                                <TextBlock
                                                    Text="{Binding Value}"
                                                    TextAlignment="Right"
                                                    TextTrimming="CharacterEllipsis"
                                                    ToolTip="{Binding Value}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>

                <local:NodeTemplateSelector x:Key="nodeTemplateSelector">
                    <local:NodeTemplateSelector.Default>
                        <DataTemplate />
                    </local:NodeTemplateSelector.Default>

                    <local:NodeTemplateSelector.SceneStartNode>
                        <DataTemplate DataType="{x:Type scene:scnStartNodeWrapper}">
                            <Grid>
                                <TextBox Text="{Binding Name}" />
                            </Grid>
                        </DataTemplate>
                    </local:NodeTemplateSelector.SceneStartNode>

                    <local:NodeTemplateSelector.SceneEndNode>
                        <DataTemplate DataType="{x:Type scene:scnEndNodeWrapper}">
                            <StackPanel Orientation="Vertical">
                                <TextBox Text="{Binding Name}" />

                                <ComboBox
                                    ItemsSource="{Binding Types}"
                                    SelectedItem="{Binding Type}" />
                            </StackPanel>
                        </DataTemplate>
                    </local:NodeTemplateSelector.SceneEndNode>
                </local:NodeTemplateSelector>

                <DataTemplate DataType="{x:Type nodes:NodeViewModel}">
                    <nodify:Node
                        Content="{Binding}"
                        ContentTemplateSelector="{DynamicResource nodeTemplateSelector}"
                        ContextMenuOpening="Node_ContextMenuOpening"
                        Header="{Binding}"
                        HeaderTemplate="{StaticResource DetailedHeaderTemplate}"
                        Input="{Binding Input}"
                        MouseDoubleClick="Node_OnMouseDoubleClick"
                        Output="{Binding Output}">
                        <nodify:Node.ContextMenu>
                            <ContextMenu />
                        </nodify:Node.ContextMenu>

                        <nodify:Node.Style>
                            <Style
                                BasedOn="{StaticResource {x:Type nodify:Node}}"
                                TargetType="{x:Type nodify:Node}">
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Details.Count}"
                                        Value="0">
                                        <Setter Property="Header" Value="{Binding Title}" />
                                        <Setter Property="HeaderTemplate" Value="{StaticResource HeaderTemplate}" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding IsSelected}"
                                        Value="True">
                                        <Setter Property="BorderBrush" Value="{StaticResource WolvenKitYellow}" />
                                        <Setter Property="BorderThickness" Value="2" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </nodify:Node.Style>

                        <nodify:Node.InputConnectorTemplate>
                            <DataTemplate DataType="{x:Type nodes:InputConnectorViewModel}">
                                <nodify:NodeInput
                                    Margin="0,2,0,2"
                                    Background="Transparent"
                                    Visibility="{Binding IsVisible,
                                                         Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Anchor="{Binding Anchor,
                                                     Mode=OneWayToSource}"
                                    IsConnected="{Binding IsConnected}">
                                    <nodify:NodeInput.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Scene nodes: Show Title FIRST and BIG (socket name) -->
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource TextFillColorPrimary}"
                                                FontSize="14"
                                                FontWeight="Normal"
                                                Text="{Binding Title}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <!-- Hide if no subtitle (quest nodes) -->
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Scene nodes only: Show Subtitle SECOND and SMALL (coordinates) -->
                                            <TextBlock
                                                Margin="4,0,0,0"
                                                VerticalAlignment="Center"
                                                Foreground="#777777"
                                                FontSize="10"
                                                FontFamily="Consolas"
                                                Text="{Binding Subtitle}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <!-- Hide if no subtitle (quest nodes) -->
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Quest nodes: Show Title only (socket name) -->
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource TextFillColorPrimary}"
                                                FontSize="14"
                                                FontWeight="Normal"
                                                Text="{Binding Title}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <!-- Hide if subtitle exists (scene nodes) -->
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </nodify:NodeInput.Header>
                                </nodify:NodeInput>
                            </DataTemplate>
                        </nodify:Node.InputConnectorTemplate>

                        <nodify:Node.OutputConnectorTemplate>
                            <DataTemplate DataType="{x:Type nodes:OutputConnectorViewModel}">
                                <nodify:NodeOutput
                                    Visibility="{Binding IsVisible,
                                                         Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Anchor="{Binding Anchor,
                                                     Mode=OneWayToSource}"
                                    IsConnected="{Binding IsConnected}">
                                    <nodify:NodeOutput.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Scene nodes only: Show Title as coordinate FIRST -->
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="#777777"
                                                FontSize="10"
                                                FontFamily="Consolas"
                                                Text="{Binding Title}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <!-- Hide if no subtitle (quest nodes) -->
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Scene nodes: Show Subtitle SECOND (socket name) -->
                                            <TextBlock
                                                Margin="4,0,0,0"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource TextFillColorPrimary}"
                                                FontSize="14"
                                                FontWeight="Normal"
                                                Text="{Binding Subtitle}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <!-- Hide if no subtitle (quest nodes) -->
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Quest nodes: Show Title only (socket name) -->
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource TextFillColorPrimary}"
                                                FontSize="14"
                                                FontWeight="Normal"
                                                Text="{Binding Title}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <!-- Hide if subtitle exists (scene nodes) -->
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding Subtitle}"
                                                                Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </nodify:NodeOutput.Header>
                                </nodify:NodeOutput>
                            </DataTemplate>
                        </nodify:Node.OutputConnectorTemplate>
                    </nodify:Node>
                </DataTemplate>


            </nodify:NodifyEditor.Resources>

            <nodify:NodifyEditor.ConnectionTemplate>
                <DataTemplate DataType="{x:Type nodes:ConnectionViewModel}">
                    <nodify:Connection
                        Source="{Binding Source.Anchor}"
                        SourceOffset="7,0"
                        SourceOffsetMode="Static"
                        Target="{Binding Target.Anchor}"
                        TargetOffset="7,0"
                        TargetOffsetMode="Static"
                        IsSelectable="True"
                        IsSelected="{Binding IsSelected}"
                        MouseRightButtonDown="Connection_OnRightClick">
                        <nodify:Connection.Style>
                            <Style TargetType="{x:Type nodify:BaseConnection}">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Stroke" Value="#FF7F7F7F" />
                                <Setter Property="StrokeThickness" Value="2.5" />

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Stroke" Value="{StaticResource WolvenKitYellow}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Stroke" Value="{StaticResource WolvenKitGreen}" />
                                    </Trigger>

                                    <!--
                                    <DataTrigger Binding="{Binding Source.Node.IsSelected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                        <Setter Property="Stroke" Value="{Binding Source.Color}" />
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding Destination.Node.IsSelected, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                        <Setter Property="Stroke" Value="{Binding Destination.Color}" />
                                    </DataTrigger>
                                    -->
                                </Style.Triggers>
                            </Style>
                        </nodify:Connection.Style>
                    </nodify:Connection>
                </DataTemplate>
            </nodify:NodifyEditor.ConnectionTemplate>

            <nodify:NodifyEditor.PendingConnectionTemplate>
                <DataTemplate DataType="{x:Type nodes:PendingConnectionViewModel}">
                    <nodify:PendingConnection
                        AllowOnlyConnectors="False"
                        CompletedCommand="{Binding ElementName=uc,
                                                   Path=Source.ConnectCommand}"
                        Source="{Binding Source,
                                         Mode=OneWayToSource}"
                        Target="{Binding Target,
                                         Mode=OneWayToSource}" />
                </DataTemplate>
            </nodify:NodifyEditor.PendingConnectionTemplate>

            <nodify:NodifyEditor.ItemContainerStyle>
                <Style
                    BasedOn="{StaticResource {x:Type nodify:ItemContainer}}"
                    TargetType="{x:Type nodify:ItemContainer}">
                    <Setter Property="ActualSize" Value="{Binding Size, Mode=OneWayToSource}" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Location" Value="{Binding Location}" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource WolvenKitYellow}" />
                            <Setter Property="BorderThickness" Value="2" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </nodify:NodifyEditor.ItemContainerStyle>

            <nodify:NodifyEditor.ContextMenu>
                <ContextMenu />
            </nodify:NodifyEditor.ContextMenu>
        </nodify:NodifyEditor>
    </Grid>
</UserControl>
